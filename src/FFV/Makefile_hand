include ../make_setting

TARGET = libFFV.a

CXXSRCS = \
    ffv.C \
    ffv_Alloc.C \
    ffv_Filter.C \
    ffv_Heat.C \
    ffv_Initialize.C \
    ffv_Loop.C \
    ffv_LS.C \
    ffv_Post.C \
    ffv_SetBC.C \
    ffv_TerminateCtrl.C \
    NS_FS_E_Binary.C \
    NS_FS_E_CDS.C \
    PS_Binary.C

SRCS = $(CXXSRCS)

.SUFFIXES: .o .C
CXXOBJS = $(CXXSRCS:.C=.o)
OBJS  = $(CXXOBJS)
CXXFLAGS += -I../FB -I../Geometry -I../F_CORE -I../IP -I../F_LS -I../FILE_IO

$(TARGET):$(OBJS)
	$(AR) $(TARGET) $(OBJS)
	$(RANLIB) $(TARGET)

.C.o:
	$(CXX) $(CXXFLAGS) $(UDEF_INC_PATH) -o $@ -c $<

clean:
	$(RM) $(OBJS) $(TARGET)

depend: $(CXXOBJS:.o=.C)
	@ rm -rf depend.inc
	@ for i in $^; do\
		$(CXX) $(CXXFLAGS) $(UDEF_INC_PATH) -MM $$i >> depend.inc;\
	done

-include depend.inc
