include ../make_setting

TARGET = ffvc

CXXSRCS = \
    main.C \
    ffv.C \
    ffv_Initialize.C \
    ffv_Alloc.C \
    ffv_SetBC.C \
    ffv_Restart.C \
    ffv_Loop.C \
    ffv_LS.C \
    ffv_Post.C \
    ffv_Heat.C \
    ffv_Filter.C \
    ffv_TerminateCtrl.C \
    NS_FS_E_Binary.C \
    NS_FS_E_CDS.C \
    PS_Binary.C

SRCS = $(CXXSRCS)

.SUFFIXES: .o .C
CXXOBJS = $(CXXSRCS:.C=.o)
OBJS  = $(CXXOBJS) 

$(TARGET):$(OBJS)
	$(CXX) $(CXXFLAGS) $(UDEF_INC_PATH) -o $(TARGET) $(OBJS) \
	$(UDEF_LIB_PATH) $(LIBS) $(UDEF_LIBS) $(UDEF_LIB_PATH_SPEC) $(LDFLAGS) 
	-mkdir -p $(FFVC_DIR)/bin
	mv $(TARGET) $(FFVC_DIR)/bin

.C.o:
	$(CXX) $(CXXFLAGS) $(UDEF_OPT) $(UDEF_INC_PATH) -c $<

clean:
	$(RM) $(OBJS) $(TARGET)

depend: $(OBJS:.o=.C)
	@ rm -rf depend.inc
	@ for i in $^; do\
		$(CXX) $(CXXFLAGS) $(UDEF_INC_PATH) -MM $$i >> depend.inc;\
	done

-include depend.inc
