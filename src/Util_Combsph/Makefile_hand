include ./make_setting2

TARGET   = combsph

CXXSRCS = \
    main.C \
    comb.C \
    comb_sph.C \
    comb_avs.C \
    FileIO_sph.C \
    FileIO_read_sph.C

#comb_plot3d.C \

F90SRCS =

SRCS  = $(CXXSRCS) $(F90SRCS)

.SUFFIXES: .o .C .f90 
CXXOBJS = $(CXXSRCS:.C=.o)
F90OBJS = $(F90SRCS:.f90=.o)
OBJS = $(CXXOBJS) $(F90OBJS)

$(TARGET):$(OBJS)
	$(CXX) $(CXXFLAGS) $(UDEF_INC_PATH) -o $(TARGET) $(OBJS) \
	$(LDFLAGS) $(UDEF_LIB_PATH) $(LIBS) $(UDEF_LIBS)
	mv $(TARGET) $(FFVC_DIR)/bin

.C.o:
	$(CXX) $(CXXFLAGS) $(UDEF_OPT) $(UDEF_INC_PATH) -c $<

.f90.o:
	$(F90) $(F90FLAGS) -o $@ -c $<

clean:
	$(RM) $(OBJS) $(TARGET)

depend: $(OBJS:.o=.C)
	@ rm -rf depend.inc
	@ for i in $^; do\
		$(CXX) $(CXXFLAGS) $(UDEF_INC_PATH) -MM $$i >> depend.inc;\
	done

-include depend.inc

