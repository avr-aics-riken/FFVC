include ../make_setting

TARGET = libFB.a

CSRCS =


CXXSRCS = Alloc.C \
          BndOuter.C \
          CompoFraction.C \
          Component.C \
          Control.C \
          DataHolder.C \
          FBUtility.C \
          Glyph.C \
          History.C \
          Intrinsic.C \
          IterationControl.C \
          MonCompo.C \
          Monitor.C \
          ParseBC.C \
          ParseMat.C \
          Sampling.C \
          SetBC.C \
          VoxInfo.C

F90SRCS =

SRCS  = $(CSRCS) $(CXXSRCS) $(F90SRCS)

.SUFFIXES: .o .c .C .f90
COBJS = $(CSRCS:.c=.o)
CXXOBJS = $(CXXSRCS:.C=.o)
F90OBJS = $(F90SRCS:.f90=.o)
OBJS  = $(COBJS) $(CXXOBJS) $(F90OBJS)

$(TARGET):$(OBJS)
	$(AR) $(TARGET) $(OBJS)
	$(RANLIB) $(TARGET)

.c.o:
	$(CC) $(CFLAGS) $(UDEF_INC_PATH) -o $@ -c $<

.C.o:
	$(CXX) $(CXXFLAGS) $(UDEF_INC_PATH) -o $@ -c $<

.f90.o:
	$(F90) $(F90FLAGS) -o $@ -c $<

clean:
	$(RM) $(OBJS) $(TARGET)

depend: $(CXXOBJS:.o=.C)
	@ rm -rf depend.inc
	@ for i in $^; do\
		$(CXX) $(CXXFLAGS) $(UDEF_INC_PATH) -MM $$i >> depend.inc;\
	done

-include depend.inc
