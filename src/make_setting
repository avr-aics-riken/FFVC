  FC          = mpifrtpx
  FCFLAGS     = -Cpp -Kfast,ocl,preex,simd=2,uxsimd,array_private,auto,parallel,openmp -Qt
  F90         = mpifrtpx
  F90FLAGS    = -Cpp -Kfast,ocl,preex,simd=2,uxsimd,array_private,auto,parallel,openmp -Qt
  LDFLAGS     = --linkfortran
  LIBS        =
  UDEF_LIB_PATH_SPEC =
  UDEF_LIBS_SPEC     =

