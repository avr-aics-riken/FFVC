include ../make_setting

TARGET = libGEOM.a

CXXSRCS = Geometry.C CompoFraction.C Glyph.C


SRCS  = $(CXXSRCS)

.SUFFIXES: .o .C
CXXOBJS = $(CXXSRCS:.C=.o)
OBJS  = $(CXXOBJS)
CXXFLAGS += -I../FB

$(TARGET):$(OBJS)
	$(AR) $(TARGET) $(OBJS)
	$(RANLIB) $(TARGET)

.C.o:
	$(CXX) $(CXXFLAGS) $(UDEF_INC_PATH) -o $@ -c $<

clean:
	$(RM) $(OBJS) $(TARGET)

depend: $(CXXOBJS:.o=.C)
	@ rm -rf depend.inc
	@ for i in $^; do\
		$(CXX) $(CXXFLAGS) $(UDEF_INC_PATH) -MM $$i >> depend.inc;\
	done

-include depend.inc
